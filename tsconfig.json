{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"lib": ["es2017"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": true,
		"outDir": ".",
		"types": ["node", "package-json"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
